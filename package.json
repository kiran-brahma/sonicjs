{
  "name": "sonicjs",
  "version": "0.0.3",
  "description": "Headless CMS based on Cloudflare Workers",
  "main": "src/server.ts",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:wrangler": "wrangler pages dev dist --env development --port 8786",
    "dev:esbuild": "node ./src/cms/util/build.mjs",
    "build": "node ./src/cms/util/build.mjs",
    "deploy": "wrangler pages deploy dist",
    "test": "jest --verbose",
    "generate": "drizzle-kit generate:sqlite --schema=./src/db/schema --out=./migrations",
    "up": "wrangler d1 migrations apply sonicjs --local",
    "up:prod": "wrangler d1 migrations apply sonicjs --remote",
    "tail": "wrangler pages deployment tail",
    "check": "run-p check:*",
    "check:tsc": "tsc --noEmit",
    "check:prettier": "prettier --check --cache . **/*.css",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier --write --cache . **/*.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240620.0",
    "@types/jest": "^29.5.12",
    "drizzle-kit": "^0.22.8",
    "esbuild": "^0.23.0",
    "esbuild-jest": "^0.5.0",
    "esbuild-plugin-copy": "^2.1.1",
    "miniflare": "^3.20240701.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "wrangler": "^3.63.1"
  },
  "dependencies": {
    "@lucia-auth/adapter-sqlite": "^3.0.2",
    "@tussle/core": "^0.7.9",
    "@tussle/middleware-cloudflareworker": "^0.7.9",
    "@tussle/state-memory": "^0.7.9",
    "@tussle/storage-r2": "^0.7.9",
    "@uppy/core": "^3.13.1",
    "@uppy/dashboard": "^3.9.1",
    "@uppy/tus": "^3.5.5",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.31.4",
    "gridjs": "^6.2.0",
    "gridjs-react": "^6.1.1",
    "hono": "^4.4.12",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "lokijs": "^1.5.12",
    "lucia": "^3.2.0",
    "qs": "^6.12.2",
    "stripe": "^16.2.0",
    "uuid": "^10.0.0"
  }
}
